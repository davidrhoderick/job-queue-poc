{
	"name": "job-queue-poc",
	"private": true,
	"type": "module",
	"workspaces": ["server"],
	"scripts": {
		"build": "react-router build",
		"dev:client": "react-router dev",
		"dev:server": "npm run dev:yoga -w server",
		"dev:redis": "npm run dev:redis -w server",
		"dev": "concurrently -c 'blue,green,red' -n 'client,server,redis' npm:dev:client npm:dev:server npm:dev:redis",
		"start": "react-router-serve ./build/server/index.js",
		"typecheck": "react-router typegen && tsc",
		"codegen:server": "npm run codegen -w server"
	},
	"dependencies": {
		"@eddeee888/gcg-typescript-resolver-files": "^0.13.0",
		"@graphql-codegen/cli": "^6.0.0",
		"@react-router/node": "^7.9.2",
		"@react-router/serve": "^7.9.2",
		"graphql-scalars": "^1.24.2",
		"isbot": "^5.1.31",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-router": "^7.9.2"
	},
	"devDependencies": {
		"@react-router/dev": "^7.9.2",
		"@tailwindcss/vite": "^4.1.13",
		"@types/node": "^22",
		"@types/react": "^19.1.13",
		"@types/react-dom": "^19.1.9",
		"concurrently": "^9.2.1",
		"tailwindcss": "^4.1.13",
		"typescript": "^5.9.2",
		"vite": "^7.1.7",
		"vite-tsconfig-paths": "^5.1.4"
	}
