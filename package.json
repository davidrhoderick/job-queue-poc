{
	"name": "job-queue-poc",
	"private": true,
	"type": "module",
	"workspaces": [
		"server"
	],
	"scripts": {
		"build": "react-router build",
		"dev:client": "react-router dev",
		"dev:server": "npm run dev -w server",
		"dev": "concurrently -c 'blue,green' -n 'client,server' npm:dev:client npm:dev:server",
		"start": "react-router-serve ./build/server/index.js",
		"typecheck": "react-router typegen && tsc"
	},
	"dependencies": {
		"@react-router/node": "^7.9.2",
		"@react-router/serve": "^7.9.2",
		"isbot": "^5.1.31",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-router": "^7.9.2"
	},
	"devDependencies": {
		"@react-router/dev": "^7.9.2",
		"@tailwindcss/vite": "^4.1.13",
		"@types/node": "^22",
		"@types/react": "^19.1.13",
		"@types/react-dom": "^19.1.9",
		"concurrently": "^9.2.1",
		"tailwindcss": "^4.1.13",
		"typescript": "^5.9.2",
		"vite": "^7.1.7",
		"vite-tsconfig-paths": "^5.1.4"
	}
}
